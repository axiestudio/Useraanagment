# ============================================================================
# üìä SUPABASE CONFIGURATION
# ============================================================================
# Get these from your Supabase project dashboard
# Go to: Settings > API > Project URL and API Keys

# Frontend Supabase Configuration (VITE_ prefix for client-side access)
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Backend Supabase Configuration (for Edge Functions)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ============================================================================
# üí≥ STRIPE CONFIGURATION
# ============================================================================
# Get these from your Stripe dashboard
# Go to: Developers > API keys

# Stripe Secret Keys (for backend/Edge Functions)
STRIPE_SECRET_KEY=sk_test_YOUR_STRIPE_SECRET_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE

# Stripe Publishable Key (for frontend)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_STRIPE_PUBLISHABLE_KEY_HERE

# ============================================================================
# üõçÔ∏è STRIPE PRODUCT CONFIGURATION
# ============================================================================
# Get these from your Stripe dashboard
# Go to: Products > [Your Product] > Pricing

# Main Pro Subscription Product
STRIPE_PRO_PRICE_ID=price_YOUR_PRO_PRICE_ID_HERE
STRIPE_PRO_PRODUCT_ID=prod_YOUR_PRO_PRODUCT_ID_HERE
VITE_STRIPE_PRO_PRICE_ID=price_YOUR_PRO_PRICE_ID_HERE
VITE_STRIPE_PRO_PRODUCT_ID=prod_YOUR_PRO_PRODUCT_ID_HERE

# Test Product (for development testing)

# ============================================================================
# üöÄ AXIE STUDIO CONFIGURATION
# ============================================================================
# Configuration for AxieStudio integration and auto-login functionality
# NOTE: Only base URLs are stored here - slugs like /login, /flows are hardcoded in components

# Main AxieStudio Base URL (without trailing slash)
# CHANGE THIS TO YOUR ACTUAL AXIESTUDIO URL
AXIESTUDIO_APP_URL=https://your-axiestudio-instance.com
VITE_AXIESTUDIO_APP_URL=https://your-axiestudio-instance.com

# AxieStudio API Authentication
AXIESTUDIO_API_KEY=sk-your-axiestudio-api-key-here
AXIESTUDIO_USERNAME=your-admin@email.com
AXIESTUDIO_PASSWORD=your-secure-password-here

# ============================================================================
# üåê API CONFIGURATION
# ============================================================================
# Additional API endpoints and configuration

# API Base URLs
VITE_API_BASE_URL=https://your-project-id.supabase.co/rest/v1

# ============================================================================
# üîß DEVELOPMENT CONFIGURATION
# ============================================================================
# Development and debugging configuration

# Environment
NODE_ENV=production

# Optional: Admin Configuration
VITE_ADMIN_USER_ID=your_admin_user_id_here

# Development mode (true/false)
VITE_DEV_MODE=true

# ============================================================================
# üìù DEPLOYMENT INSTRUCTIONS
# ============================================================================
# 1. Copy this file to .env
# 2. Replace all placeholder values with your actual credentials
# 3. Ensure all VITE_ prefixed variables are set for frontend access
# 4. Set up your Supabase project and get the URL and keys
# 5. Configure your Stripe account and get the API keys and product IDs
# 6. Set up your AxieStudio instance and get the base URL and credentials
# 7. Run: npm install
# 8. Run: npm run dev (for development) or npm run build (for production)
